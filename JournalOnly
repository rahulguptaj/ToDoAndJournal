  <title>Office Journal</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f9fafb;
      color: #111;
      max-width: 700px;
      margin: 10px auto;
      padding: 20px;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
      flex-wrap: wrap;
      gap: 10px;
    }

    h1 {
      font-size: 20px;
      margin: 0;
    }

    .header-buttons {
      display: flex;
      gap: 10px;
    }

    button {
      border: none;
      border-radius: 6px;
      padding: 8px 14px;
      cursor: pointer;
      color: white;
      font-size: 14px;
    }

    #downloadBtn {
      background: #10b981;
    }

    #downloadBtn:hover {
      background: #059669;
    }

    #clearBtn {
      background: #ef4444;
    }

    #clearBtn:hover {
      background: #b91c1c;
    }

    .input-area {
      display: flex;
      align-items: flex-start;
      gap: 10px;
      margin-bottom: 15px;
    }

    textarea {
      flex: 1;
      height: 25px;
      padding: 10px;
      border-radius: 6px;
      border: 1px solid #ccc;
      font-size: 14px;
      resize: vertical;
    }

    #addBtn {
      background: #2563eb;
      height: 40px;
      align-self: flex-start;
    }

    #addBtn:hover {
      background: #1e40af;
    }

    ul {
      list-style: none;
      padding: 0;
      margin-top: 10px;
    }

    li {
      background: white;
      margin-bottom: 10px;
